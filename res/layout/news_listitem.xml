<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:paddingBottom="7dip">   

    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/news_listitem_flag"
	      	android:layout_width="30.0dip" 
	        android:layout_height="30.0dip"
	        android:layout_marginRight="2dip"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/widget_today_icon"
	        android:visibility="gone"/>
    
	    <TextView
	        android:id="@+id/news_listitem_title"
	        android:layout_width="264dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textColor="@color/listitem_black"
	        android:textSize="@dimen/text_size_15"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/news_listitem_date"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="2dip"
	        android:textColor="@color/listitem_gray"
	        android:textSize="@dimen/text_size_10" />
	    
   	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/news_listitem_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="发布于"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/widget_comment_count_icon" />

        <TextView
            android:id="@+id/news_listitem_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_10" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="200dip"
            android:src="@drawable/newnotice" />

    </LinearLayout>

</LinearLayout> 
